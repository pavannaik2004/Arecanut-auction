# Server Configuration
PORT=5000

# Database Configuration
# For local MongoDB:
# MONGO_URI=mongodb://localhost:27017/arecanut-auction

# For MongoDB Atlas (Cloud):
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/arecanut-auction?retryWrites=true&w=majority

# MySQL Database Configuration
AIVEN_SERVICE_URI==mysql://<username>:<password>@<host>:<port>/<database>?ssl-mode=REQUIRED

# JWT Secret Key
# IMPORTANT: Generate a strong random string for production
# Use: openssl rand -base64 32 (Linux/Mac)
# Or: PowerShell: -join ((65..90) + (97..122) | Get-Random -Count 32 | ForEach-Object {[char]$_})
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Environment
NODE_ENV=development

# Cloudinary Configuration
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Image Cleanup Configuration
# Images older than this many days will be automatically deleted
# Default: 90 days (runs daily at 2 AM)
IMAGE_CLEANUP_DAYS=90
